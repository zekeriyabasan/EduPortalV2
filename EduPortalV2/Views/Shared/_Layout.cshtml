<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduPortalPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-nav bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Eğitim Portalı</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <ul class="navbar-nav flex-lg-shrink-1">
                        <li class="nav-item">
                            <a class="btn btn-success btn-sm" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Categories" asp-action="Index">Kurs Kategorileri</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Courses" asp-action="Index">Kurslar</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Educators" asp-action="Index">Eğitmenler</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-warning btn-sm" asp-area="" asp-controller="MyCourses" asp-action="Index">Kurslarım</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış</a>
                        </li>


                    </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-success" asp-area="" asp-controller="Account" asp-action="Login">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-area="" asp-controller="Account" asp-action="Register">Kaydol</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - EduPortalPro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
